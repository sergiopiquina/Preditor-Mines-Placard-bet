                <script>
                    const botToken = "SEU_TOKEN_DO_BOT";
                    const chatId = "SEU_CHAT_ID";

                    let intervalId;
                    let countdownIntervalId;

                    function generatePrediction() {
                        const grid = document.getElementById("grid");
                        grid.innerHTML = "";

                        const gridArray = Array.from({ length: 5 }, () => Array(5).fill(""));
                        let starsPlaced = 0;
                        while (starsPlaced < 4) {
                            const row = Math.floor(Math.random() * 5);
                            const col = Math.floor(Math.random() * 5);
                            if (gridArray[row][col] === "") {
                                gridArray[row][col] = "ðŸ’Ž";
                                starsPlaced++;
                            }
                        }

                        gridArray.forEach(row => {
                            row.forEach(cell => {
                                const cellDiv = document.createElement("div");
                                cellDiv.className = "cell";
                                cellDiv.textContent = cell;
                                grid.appendChild(cellDiv);
                            });
                        });

                        updateValidTime();
                        sendPredictionToTelegram(gridArray);
                    }

                    function updateValidTime() {
                        const validTime = document.getElementById("valid-time");
                        const currentTime = new Date();
                        currentTime.setSeconds(0);
                        currentTime.setMilliseconds(0);

                        const validUntil = new Date(currentTime.getTime() + 270000);
                        const formattedTime = validUntil.toLocaleTimeString([], {
                            hour: "2-digit",
                            minute: "2-digit",
                            second: "2-digit",
                            hour12: false
                        });
                        validTime.textContent = formattedTime;
                    }

                    function sendPredictionToTelegram(gridArray) {
                        const gridText = gridArray.map(row => row.join(" ")).join("\\n");
                        const message = `PrevisÃ£o do Campo Minado:\\n${gridText}\\nVÃ¡lido atÃ©: ${document.getElementById("valid-time").textContent}`;

                        fetch(`https://api.telegram.org/bot${botToken}/sendMessage`, {
                            method: "POST",
                            headers: {
                                "Content-Type": "application/json"
                            },
                            body: JSON.stringify({
                                chat_id: chatId,
                                text: message,
                                parse_mode: "HTML"
                            })
                        }).then(response => {
                            if (!response.ok) {
                                console.error("Erro ao enviar mensagem para o Telegram:", response.statusText);
                            }
                        }).catch(error => {
                            console.error("Erro ao conectar com a API do Telegram:", error);
                        });
                    }

                    function startRound() {
                        clearInterval(intervalId);
                        clearInterval(countdownIntervalId);

                        document.getElementById("message").textContent = "Rodada terminada";
                        document.getElementById("countdown").textContent = "";

                        setTimeout(() => {
                            document.getElementById("message").textContent = "A prÃ³xima comeÃ§a em:";
                            let countdown = 5;

                            countdownIntervalId = setInterval(() => {
                                document.getElementById("countdown").textContent = countdown;
                                countdown--;
                                if (countdown < 0) {
                                    clearInterval(countdownIntervalId);
                                    document.getElementById("message").textContent = "";
                                    generatePrediction();
                                }
                            }, 1000);

                            intervalId = setInterval(startRound, 270000);
                        }, 5000);
                    }

                    startRound();
                </script>
