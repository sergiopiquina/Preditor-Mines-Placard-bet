    <script>
        // Mostrar modal ao carregar a pÃ¡gina
        window.onload = function() {
            document.getElementById("myModal").style.display = "block";
        }

        function fecharModal() {
            document.getElementById("myModal").style.display = "none";
        }

        function mostrarTela2() {
            var checkbox = document.getElementById("termos");
            if (checkbox.checked) {
                document.getElementById("tela1").style.display = "none";
                document.getElementById("tela2").style.display = "block";
            } else {
                alert("Por favor, aceite os termos antes de prosseguir.");
            }
        }

        function mostrarPreditor() {
            document.getElementById("tela2").style.display = "none";
            document.getElementById("preditor").style.display = "block";
        }

        function sair() {
            window.location.href = "https://www.google.com"; // Redireciona para uma pÃ¡gina de saÃ­da
        }
